<Window
    x:Class="PixelWallE.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avaloniaEdit="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
    xmlns:document="clr-namespace:AvaloniaEdit.Document;assembly=AvaloniaEdit"
    xmlns:local="clr-namespace:PixelWallE"
    Title="PixelWallE"
    Width="800"
    Height="600">

    <!--  Elemento raíz Grid principal  -->
    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Barra superior  -->
        <Border
            Grid.Row="0"
            Padding="10"
            Background="LightGray">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock VerticalAlignment="Center" Text="Canvas Size:" />
                <TextBox
                    Name="SizeInput"
                    Width="50"
                    Text="50" />
                <TextBlock VerticalAlignment="Center" Text="Pixel Size:" />
                <TextBox
                    Name="PixelSizeInput"
                    Width="50"
                    Text="20" />
                <Button
                    Name="ResizeButton"
                    MinWidth="100"
                    Click="OnResizeClick"
                    Content="Resize" />
                <Button
                    Name="GridButton"
                    MinWidth="100"
                    Click="OnGridClick"
                    Content="Grid: ON" />
                <!--  Botones de ejecución  -->
                <Button
                    Name="RunButton"
                    MinWidth="80"
                    Margin="20,0,0,0"
                    Click="OnRunClick"
                    Content="Run" />

                <!--  Botones de archivo  -->
                <Button
                    Name="LoadButton"
                    MinWidth="80"
                    Click="OnLoadClick"
                    Content="Load" />
                <Button
                    Name="SaveButton"
                    MinWidth="80"
                    Click="OnSaveClick"
                    Content="Save" />
            </StackPanel>
        </Border>

        <!--  Área principal  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <!--  Editor  -->
                <ColumnDefinition Width="5" />
                <!--  Divisor  -->
                <ColumnDefinition Width="*" />
                <!--  Canvas  -->
            </Grid.ColumnDefinitions>

            <!--  Editor de código  -->
            <avaloniaEdit:TextEditor
                Name="CodeEditor"
                Grid.Column="0"
                Background="LightGray"
                FontFamily="Consolas"
                FontSize="12"
                HorizontalScrollBarVisibility="Auto"
                LineNumbersForeground="Gray"
                ShowLineNumbers="True"
                SyntaxHighlighting="C#"
                VerticalScrollBarVisibility="Auto"
                WordWrap="False">
                <avaloniaEdit:TextEditor.Document>
                    <document:TextDocument Text="Spawn(0,0)" />
                </avaloniaEdit:TextEditor.Document>
            </avaloniaEdit:TextEditor>

            <!--  Divisor  -->
            <GridSplitter
                Grid.Column="1"
                Width="5"
                Background="Gray" />

            <!--  Canvas de dibujo  -->
            <Border
                Grid.Column="2"
                Margin="10"
                Background="White"
                BorderBrush="Gray"
                BorderThickness="1">
                <ScrollViewer
                    x:Name="CanvasScrollViewer"
                    HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Auto">
                    <local:PixelCanvas x:Name="PixelCanvasControl" />
                </ScrollViewer>
            </Border>


        </Grid>
    </Grid>
</Window>
